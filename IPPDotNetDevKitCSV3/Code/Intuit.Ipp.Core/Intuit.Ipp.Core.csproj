<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        
        <TargetFrameworks>netstandard2.0;net472</TargetFrameworks>
        
	       <DocumentationFile>Intuit.Ipp.Core.XML</DocumentationFile>
    </PropertyGroup>


    

    <!-- Conditionally obtain references for the .NET Framework 4.0 target -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <!-- Conditionally obtain references for the .NET Framework 4.5 target -->
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    
  </ItemGroup>
  <ItemGroup>
      <PackageReference Include="Microsoft.NETCore.Targets" Version="2.1.0" />
      <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
      <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Xml" Version="2.2.0" />
  
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
    </ItemGroup>
  <ItemGroup>
    <Reference Include="Intuit.Ipp.Data">
      <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Data.dll</HintPath>
    </Reference>
    <Reference Include="Intuit.Ipp.Diagnostics">
      <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Diagnostics.dll</HintPath>
    </Reference>
    <Reference Include="Intuit.Ipp.Exception">
      <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Exception.dll</HintPath>
    </Reference>
    <Reference Include="Intuit.Ipp.Security">
      <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Security.dll</HintPath>
    </Reference>
    <Reference Include="Intuit.Ipp.Utility">
      <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Utility.dll</HintPath>
    </Reference>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y &quot;$(TargetPath)&quot; &quot;$(SolutionDir)..\SDK Assemblies\&quot;&#xD;&#xA;xcopy /Y &quot;$(TargetPath)&quot; &quot;$(SolutionDir)..\SDK Assemblies Standard\&quot;&#xD;&#xA;xcopy /Y &quot;$(TargetDir)$(TargetName).XML&quot; &quot;$(SolutionDir)..\SDK Assemblies Standard\&quot;&#xD;&#xA;xcopy /Y &quot;$(ProjectDir)bin\Debug\net472\$(TargetName).dll&quot; &quot;$(SolutionDir)..\SDK Assemblies Framework\&quot;&#xD;&#xA;xcopy /Y &quot;$(ProjectDir)bin\Debug\net472\$(TargetName).XML&quot; &quot;$(SolutionDir)..\SDK Assemblies Framework\&quot;" />
  </Target>

</Project>



