<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net472</TargetFrameworks>
	<DocumentationFile>Intuit.Ipp.Security.XML</DocumentationFile>
    </PropertyGroup>
    <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
        <Reference Include="System.Net.Http" />
    </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    </ItemGroup>
    <ItemGroup>
      <Compile Remove="MigratedTokenResponse.cs" />
      <Compile Remove="OAuth1ToOAuth2TokenMigrationHelper.cs" />
      <Compile Remove="OAuthRequestValidator.cs" />
      <Compile Remove="SecurityConstants.cs" />
    </ItemGroup>
    <ItemGroup>
      <None Remove="SecurityConstants.xml" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Microsoft.NETCore.Targets" Version="2.1.0" />
      <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
      <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
    </ItemGroup>
    <ItemGroup>
      <Reference Include="Intuit.Ipp.Exception">
        <HintPath>..\..\SDK Assemblies\Intuit.Ipp.Exception.dll</HintPath>
      </Reference>
    </ItemGroup>
    
<Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y &quot;$(TargetPath)&quot; &quot;$(SolutionDir)..\SDK Assemblies\&quot;&#xD;&#xA;xcopy /Y &quot;$(TargetPath)&quot; &quot;$(SolutionDir)..\SDK Assemblies Standard\&quot;&#xD;&#xA;xcopy /Y &quot;$(TargetDir)$(TargetName).XML&quot; &quot;$(SolutionDir)..\SDK Assemblies Standard\&quot;&#xD;&#xA;xcopy /Y &quot;$(ProjectDir)bin\Debug\net472\$(TargetName).dll&quot; &quot;$(SolutionDir)..\SDK Assemblies Framework\&quot;&#xD;&#xA;xcopy /Y &quot;$(ProjectDir)bin\Debug\net472\$(TargetName).XML&quot; &quot;$(SolutionDir)..\SDK Assemblies Framework\&quot;" />
  </Target>
</Project>


