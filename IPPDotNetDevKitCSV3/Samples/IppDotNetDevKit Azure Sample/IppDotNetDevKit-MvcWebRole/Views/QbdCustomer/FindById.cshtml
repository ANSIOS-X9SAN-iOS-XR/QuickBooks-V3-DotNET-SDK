@model Intuit.Ipp.Data.Customer
@{
    ViewBag.Title = "FindById Qbd Customer";
    string results = ViewBag.Results;
    bool load = ViewBag.Load;
    string error = ViewBag.Error;
}
<div style="float: right; margin-right: 5px; margin-top: 5px;">
    <a href="/QbdCustomer/Index">
        <img src="../../Images/back.png" alt="Back" style="max-height: 30px;" />
    </a>
</div>
<h2>
    FindById Qbd Customer</h2>
@using (Html.BeginForm())
{
    <p>
        Enter the identifier of the customer record to find:
    </p>
    <input type="submit" value="Find By Id" class="defaultBtn" />
    <span style="width: 20%; float: right; margin-top: 7px;">@Html.EditorFor(model => model.Id)</span>
}
<div>
    @if (results == "empty")
    {
        if (!string.IsNullOrWhiteSpace(error))
        {
        <p style="color: Red;">
            @Html.Raw(error)
        </p>
        }
        else
        {
        <p>
            <b>The search returned no results. Please try again.</b></p>
        }
    }
    else
    {
        if (!load)
        {
            // show the details of customer
        <table class="reportsTable" width="95%" cellspacing="5px" cellpadding="5px">
            <tr>
                <th>
                    Identifier
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th style="min-width: 150px;">
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DisplayName)
                </td>
                <td style="min-width: 150px;">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id.Replace(':', '-') }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.Id.Replace(':', '-') }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Id.Replace(':', '-') }) |
                    @Html.ActionLink("Void", "Void", new { id = Model.Id.Replace(':', '-') })
                </td>
            </tr>
        </table>
        }
    }
</div>
