@model IppDotNetDevKit_MvcWebRole.Models.QueryModel.QueryStringModel
@{
    ViewBag.Title = "Query String Qbd Invoice";
}
<div style="float: right; margin-right: 5px; margin-top: 5px;">
    <a href="/QbdFilter/Index">
        <img src="../../Images/back.png" alt="Back" style="max-height: 30px;" />
    </a>
</div>
<h2>
    Query String Qbd Invoice</h2>
@using (Html.BeginForm())
{
    <div>
        Invoice Simple Query:</div> @Html.EditorFor(model => model.SimpleQuery)
    <input type="submit" value="Execute" class="defaultBtn" />
}
<div>
    @if (Model != null)
    {
        if (Model.Success)
        {
            if (Model.Entities == null || Model.Entities.Count() == 0)
            {
        <p>
            <b>The search returned no results. Please try again.</b></p>
            }
            else
            {
                // show the details of invoice
        <div class="wrapper">
            <table class="reportsTable" width="95%" cellspacing="5px" cellpadding="5px">
                <thead>
                    <tr>
                        <td>
                            Identifier
                        </td>
                        <td>
                            Status
                        </td>
                        <td>
                            Metadata CreateTime
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Entities)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MetaData.CreateTime)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
            }
        }
        else
        {
        <p style="color: Red;">
            @Html.Raw(Model.Error)
        </p>
        }
    }
</div>
